<odoo>
    <data>
        <!-- ********** | Inherit CRM - Lead | ************  -->

        <!-- Inherit Form -->
        <record id="view_lead_form_inherit" model="ir.ui.view">
            <field name="name">view.lead.form.inherit</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="propertyType"/>
                </xpath>
                <!-- ++++++++++++++++++++ Fields ++++++++++++++++++++   -->


                <xpath expr="//group[@name='opportunity_partner']" position="replace">
                    <group>
                        <field name="propertyType"/>
                        <field name="foundProperty"/>
                    </group>
                </xpath>


                <!-- ++++++++++++++++++++ Groups ++++++++++++++++++++   -->

                <xpath expr="//form/sheet/group[last()]" position="after">


                    <!--  Tenant & LandLord -->
                    <group>
                        <group string="Tenant">
                            <field name="tenant_id"/>
                            <field name="authorizedPerson"/>
                            <field name="commercialNumber" invisible="propertyType != 'commercial'"/>
                            <field name="nationalId" invisible="propertyType != 'residential'"/>
                            <field name="tenantMobile"/>
                        </group>
                        <group string="Land Lord">
                            <field name="landlord_id"/>
                            <field name="faalLicense"/>
                            <field name="landlordAuthorizedPerson"/>
                            <field name="landlordMobile"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
